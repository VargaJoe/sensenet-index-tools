@page
@model SenseNet.IndexTools.Web.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Reports";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>Reports</h1>
            <p class="lead">View and manage operation reports.</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5>Report Types</h5>
                </div>
                <div class="card-body">
                    <div class="nav flex-column nav-pills" id="report-types-tab" role="tablist" aria-orientation="vertical">
                        <button class="nav-link active" id="lastactivity-tab" data-bs-toggle="pill" data-bs-target="#lastactivity" type="button" role="tab" aria-controls="lastactivity" aria-selected="true">
                            LastActivityId Reports
                        </button>
                        <button class="nav-link" id="validation-tab" data-bs-toggle="pill" data-bs-target="#validation" type="button" role="tab" aria-controls="validation" aria-selected="false">
                            Validation Reports
                        </button>
                        <button class="nav-link" id="subtree-tab" data-bs-toggle="pill" data-bs-target="#subtree" type="button" role="tab" aria-controls="subtree" aria-selected="false">
                            Subtree Check Reports
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h5 id="report-type-title">LastActivityId Reports</h5>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="report-types-tabContent">
                        <!-- LastActivityId Reports -->
                        <div class="tab-pane fade show active" id="lastactivity" role="tabpanel" aria-labelledby="lastactivity-tab">
                            @if (Model.LastActivityReports.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Date</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var report in Model.LastActivityReports)
                                            {
                                                <tr>
                                                    <td>@report.Title</td>
                                                    <td>@report.CreatedAt.ToString("g")</td>
                                                    <td>
                                                        <a asp-page="./ViewReport" asp-route-type="lastactivity" asp-route-id="@report.Id" class="btn btn-sm btn-primary">View</a>
                                                        <form method="post" asp-page-handler="DeleteReport" class="d-inline">
                                                            <input type="hidden" name="reportType" value="lastactivity" />
                                                            <input type="hidden" name="reportId" value="@report.Id" />
                                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this report?')">Delete</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    No LastActivityId reports available.
                                </div>
                            }
                        </div>

                        <!-- Validation Reports -->
                        <div class="tab-pane fade" id="validation" role="tabpanel" aria-labelledby="validation-tab">
                            @if (Model.ValidationReports.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Date</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var report in Model.ValidationReports)
                                            {
                                                <tr>
                                                    <td>@report.Title</td>
                                                    <td>@report.CreatedAt.ToString("g")</td>
                                                    <td>
                                                        <a asp-page="./ViewReport" asp-route-type="validation" asp-route-id="@report.Id" class="btn btn-sm btn-primary">View</a>
                                                        <form method="post" asp-page-handler="DeleteReport" class="d-inline">
                                                            <input type="hidden" name="reportType" value="validation" />
                                                            <input type="hidden" name="reportId" value="@report.Id" />
                                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this report?')">Delete</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    No validation reports available.
                                </div>
                            }
                        </div>

                        <!-- Subtree Check Reports -->
                        <div class="tab-pane fade" id="subtree" role="tabpanel" aria-labelledby="subtree-tab">
                            @if (Model.SubtreeReports.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Date</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var report in Model.SubtreeReports)
                                            {
                                                <tr>
                                                    <td>@report.Title</td>
                                                    <td>@report.CreatedAt.ToString("g")</td>
                                                    <td>
                                                        <a asp-page="./ViewReport" asp-route-type="subtree" asp-route-id="@report.Id" class="btn btn-sm btn-primary">View</a>
                                                        <form method="post" asp-page-handler="DeleteReport" class="d-inline">
                                                            <input type="hidden" name="reportType" value="subtree" />
                                                            <input type="hidden" name="reportId" value="@report.Id" />
                                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this report?')">Delete</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    No subtree check reports available.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Update the report type title when changing tabs
        document.querySelectorAll('#report-types-tab button').forEach(button => {
            button.addEventListener('click', function() {
                document.getElementById('report-type-title').textContent = this.textContent.trim();
            });
        });
    </script>
}
