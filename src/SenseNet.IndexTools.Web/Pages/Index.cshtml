@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>SenseNet Index Maintenance Suite</h1>
            <p class="lead">A comprehensive toolkit for managing and maintaining SenseNet Lucene.NET indexes.</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a asp-page="/Operations/LastActivityId" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">LastActivityId Management</h5>
                            </div>
                            <p class="mb-1">View, set, or initialize LastActivityId values in indexes.</p>
                        </a>
                        <a asp-page="/Operations/Validate" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">Index Validation</h5>
                            </div>
                            <p class="mb-1">Validate index structure and integrity.</p>
                        </a>
                        <a asp-page="/Operations/SubtreeCheck" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">Subtree Check</h5>
                            </div>
                            <p class="mb-1">Check if database content exists in the index.</p>
                        </a>
                        <a asp-page="/Operations/ListItems" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">List Items</h5>
                            </div>
                            <p class="mb-1">List items from index and/or database.</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Recent Reports</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentReports.Any())
                    {
                        <div class="list-group">
                            @foreach (var report in Model.RecentReports)
                            {
                                <a asp-page="/Reports/ViewReport" 
                                   asp-route-type="@report.ReportType" 
                                   asp-route-id="@report.Id"
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">@report.Title</h5>
                                        <small>@report.CreatedAt.ToString("g")</small>
                                    </div>
                                    <p class="mb-1">@report.ReportType.ToUpper()</p>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p>No reports available yet. Run an operation to generate a report.</p>
                    }
                    <div class="mt-3">
                        <a asp-page="/Reports/Index" class="btn btn-outline-primary">View All Reports</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5>System Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Default Index Paths</h6>
                            <ul class="list-group mb-3">
                                @foreach (var path in Model.IndexPaths)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        @path.Name
                                        <span class="text-muted small">@path.Path</span>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Settings</h6>
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Create backups by default
                                    <span class="badge bg-primary rounded-pill">@(Model.BackupSettings.CreateBackupsByDefault ? "Yes" : "No")</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Default backup path
                                    <span class="text-muted small">@Model.BackupSettings.DefaultBackupPath</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-page="/Settings/Index" class="btn btn-outline-primary">Manage Settings</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
